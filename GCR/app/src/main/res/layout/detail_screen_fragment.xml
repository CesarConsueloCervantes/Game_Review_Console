<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Portada del juego -->
        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_mando" />

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Título -->
            <TextView
                android:id="@+id/tvGameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DARK QUEST"
                android:maxLines="2"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <!-- Plataforma principal -->

            <!-- Pill “Mostly Positive” -->
            <TextView
                android:id="@+id/txtPlatform"
                style="@style/textView_console_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="3dp"
                android:text="Xbox 360"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvScorePill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                style="@style/very_positive_style" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/filterRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:overScrollMode="never"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                tools:layout_editor_absoluteX="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" >


                <!-- User Reviews -->
                <TextView
                    android:id="@+id/tvUserReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Reviews"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/btnWriteReview"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_plus"
                    android:clickable="true"
                    android:focusable="true"/>

            </LinearLayout>

        </LinearLayout>
        <!-- Lista de reviews -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerReviews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="12dp"/>
    </LinearLayout>

</ScrollView>